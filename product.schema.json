{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
      "product": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "$schema": {
              "type": "string",
              "format": "uri"
            },
            "id": {
              "type": "integer"
            },
            "name": {
              "type": "string"
            },
            "price": {
              "type": "number",
              "minimum": 8
            }
          },
          "required": ["$schema", "id", "name", "price"]
        }
      }
    },
    "required": ["product"]
  }
  